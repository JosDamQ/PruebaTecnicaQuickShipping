<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/moneda/edit/<%= data.idMoneda%>" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%= data.nombre%>" placeholder="nombre de moneda" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" step="0.01" name="venta" value="<%= data.venta%>" placeholder="valor venta" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" step="0.01" name="compra" value="<%= data.compra%>" placeholder="valor de compra    " class="form-control">
                        </div>
                        <button type="submit" class="btn btn-success">Actualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>